<section class="products">
<h2>Best Sellers</h2>
<div class="grid">
{% for product in collections.all.products limit:4 %}
<div class="product">
<img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}">
<h3>{{ product.title }}</h3>
<p>{{ product.price | money }}</p>
<a href="{{ product.url }}" class="btn">Buy Now</a>
</div>
{% endfor %}
</div>
</section>


